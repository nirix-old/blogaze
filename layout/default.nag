<!DOCTYPE html>
<html>
  <head>
    <title>#{@title}</title>
    <link rel="stylesheet/less" type="text/css" href="#{Ramaze.options.prefix}css/master.less">
    <link href="/css/print.css" media="print" rel="stylesheet" type="text/css" />
    <!--[if IE]>
    #{css 'ie'}
    <![endif]-->
    #{js 'jquery'}
    #{js 'less'}
  </head>
  <body>
    <div id="wrapper">
      <header id="header">
        <h1><a href="/">#{@settings[:title]}</a></h1>
        <nav>
          <ul>
            <?r if session[:logged_in] ?>
            <li><a href="/logout">Logout</a></li>
            <?r else ?>
            <li><a href="/login">Login</a></li>
            <?r end ?>
          </ul>
        </nav>
      </header>
      <div id="page_wrapper">
        <div id="page">
          #@content
        </div>
      </div>
      <footer id="footer">
        Powered by Blogaze
      </footer>
    </div>
  </body>
</html>
